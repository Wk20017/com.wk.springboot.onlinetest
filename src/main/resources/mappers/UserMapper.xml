<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wk.springboot.dao.UserDao">
    <resultMap id="AnswerMap" type="com.wk.springboot.vo.Answer">
        <result column="test_id" property="test_id"></result>
        <result column="answer" property="answer"></result>
    </resultMap>

    <select id="queryUserByUserId" resultType="com.wk.springboot.vo.User">
        select user_name from user where card_id = #{card_id}
    </select>

    <update id="update_join" parameterType="com.wk.springboot.vo.User">
        update user set is_join = 1 where card_id = #{card_id}
    </update>
    <update id="update_time" parameterType="com.wk.springboot.vo.User">
        update user set use_time = #{time} where card_id = #{card_id}
    </update>
    <update id="update_grade" parameterType="com.wk.springboot.vo.User">
        update user set grade = #{grade} where card_id = #{card_id}
    </update>
    <update id="update_grade" parameterType="com.wk.springboot.vo.User">
        update user set right_count = #{grade} where card_id = #{card_id}
    </update>
    <delete id="deleteUser" parameterType="com.wk.springboot.vo.User">
        delete from user where card_id = #{card_id}
    </delete>

    <select id="queryAnswer" resultMap="AnswerMap">
        select * from answer
    </select>
</mapper>